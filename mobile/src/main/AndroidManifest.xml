        <activity
            android:name=".Health.HpActivity"
            android:label="@string/title_hp"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Money.MoneyActivity"
            android:label="@string/title_money"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".MainMenu.Settings.MainSettingsActivity"
            android:label="@string/title_settings_main"/>
        <activity
            android:name=".Experience.Settings.ExperienceSettingsActivity"
            android:label="@string/title_settings_experience"/>
        <activity
            android:name=".Health.Settings.HpSettingsActivity"
            android:label="@string/title_settings_hp"/>
        <activity
            android:name=".Money.Settings.MoneySettingsActivity"
            android:label="@string/title_settings_money"/>

<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/setting_category_title_general">
        <CheckBoxPreference
            android:defaultValue="@string/setting_defaultvalue_show_hints"
            android:key="@string/setting_key_show_hints"
            android:summary="@string/setting_summary_show_hints"
            android:title="@string/setting_title_show_hints"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/setting_category_title_experience">
        <ListPreference
            android:defaultValue="@string/setting_defaultvalue_experience_update_type"
            android:dialogTitle="@string/setting_dialogtitle_experience_update_type"
            android:entries="@array/setting_entries_experience_update_type"
            android:entryValues="@array/setting_entryvalues_experience_update_type"
            android:key="@string/setting_key_experience_update_type"
            android:summary="@string/setting_summary_experience_update_type"
            android:title="@string/setting_title_experience_update_type"/>
        <ListPreference
            android:dialogTitle="@string/setting_dialogtitle_experience_picker_steps"
            android:entries="@array/setting_entries_experience_picker_steps"
            android:entryValues="@array/setting_entryvalues_experience_picker_steps"
            android:key="@string/setting_key_experience_picker_steps"
            android:summary="@string/setting_summary_experience_picker_steps"
            android:title="@string/setting_title_experience_picker_steps"/>
        <CheckBoxPreference
            android:defaultValue="@string/setting_defaultvalue_allow_level_down"
            android:key="@string/setting_key_allow_level_down"
            android:summary="@string/setting_summary_allow_level_down"
            android:title="@string/setting_title_allow_level_down"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/setting_category_confirm">
    <PreferenceCategory android:title="@string/setting_category_title_money">
        <ListPreference
            android:defaultValue="@string/setting_defaultvalue_money_update_type"
            android:dialogTitle="@string/setting_dialogtitle_money_update_type"
            android:entries="@array/setting_entries_money_update_type"
            android:entryValues="@array/setting_entryvalues_money_update_type"
            android:key="@string/setting_key_money_update_type"
            android:summary="@string/setting_summary_money_update_type"
            android:title="@string/setting_title_money_update_type"/>
    </PreferenceCategory>
        <Preference
            android:key="@string/setting_key_confirm"
            android:title="@string/setting_title_confirm"/>
    </PreferenceCategory>
</PreferenceScreen>
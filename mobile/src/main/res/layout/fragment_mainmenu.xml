<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout style="@style/fragment_main_menu">

        <TextView
            android:id="@+id/version_nr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="4dp"
            android:textColor="@color/grey_medium"/>

        <ImageView
            android:id="@+id/beta_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/image_description_beta_banner"
            android:scaleType="centerInside"
            android:src="@drawable/beta"/>

        <LinearLayout
            android:id="@+id/main_menu_buttons_container"
            style="@style/container_button_main_menu"
            android:layout_alignParentTop="true"
            android:layout_below="@id/beta_image"
            android:orientation="vertical">

            <Button
                android:id="@+id/main_menu_button_basic_character_info"
                style="@style/button_main_menu_coming_soon"
                android:text="@string/title_basic_character_info"/>

            <Button
                android:id="@+id/main_menu_button_level_and_experience"
                style="@style/button_main_menu"
                android:text="@string/title_level_and_experience"/>

            <Button
                android:id="@+id/main_menu_button_abilities"
                style="@style/button_main_menu_coming_soon"
                android:text="@string/title_abilities"/>

            <Button
                android:id="@+id/main_menu_button_hp"
                style="@style/button_main_menu_coming_soon"
                android:text="@string/title_hp"/>

            <Button
                android:id="@+id/main_menu_button_money"
                style="@style/button_main_menu"
                android:text="@string/title_money"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>

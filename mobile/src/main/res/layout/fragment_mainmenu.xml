<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fragment_main_menu">

    <ImageView
        android:id="@+id/beta_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/image_description_beta_banner"
        android:scaleType="centerInside"
        android:src="@drawable/beta"/>

    <include layout="@layout/mainmenu_buttons"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/version_nr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="4dp"
        android:text="1.2.3.4"
        android:textColor="@color/grey_medium"/>
</RelativeLayout>

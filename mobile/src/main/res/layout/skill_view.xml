<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_very_light">

    <TextView
        android:id="@+id/skill_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acrobatics"
        android:textColor="@color/red"/>

    <TextView
        android:id="@+id/skill_bonus"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/blue"/>

    <TextView
        android:id="@+id/skill_ability_value"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:gravity="center"
        android:text="2"/>

    <CheckBox
        android:id="@+id/skill_class_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"/>

    <TextView
        android:id="@+id/skill_rank"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:gravity="center"
        android:text="1"/>
</LinearLayout>
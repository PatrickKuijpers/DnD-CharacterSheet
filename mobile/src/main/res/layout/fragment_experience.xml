<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/vertical_margin"
                android:paddingLeft="@dimen/horizontal_margin"
                android:paddingRight="@dimen/horizontal_margin"
                android:paddingTop="@dimen/vertical_margin">

    <ProgressBar
        android:id="@+id/experience_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:id="@+id/experience_data_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/experience_progressBar"
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_toLeftOf="@+id/experience_change_container"
        android:gravity="top">

        <TextView
            android:id="@+id/experience_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/experience_change_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/experience_data_container"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/experience_change_button_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/experience_plus_button"
                style="@style/button_square"
                android:text="+"/>

            <Button
                android:id="@+id/experience_min_button"
                style="@style/button_square"
                android:text="-"/>
        </LinearLayout>

        <NumberPicker
            android:id="@+id/numberPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_toRightOf="@id/experience_plus_button"/>
    </LinearLayout>
</RelativeLayout>

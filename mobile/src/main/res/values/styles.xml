<resources>

    <style name="fragment_main_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="fragment_full_screen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/vertical_margin</item>
        <item name="android:paddingBottom">@dimen/vertical_margin</item>
        <item name="android:paddingLeft">@dimen/horizontal_margin</item>
        <item name="android:paddingRight">@dimen/horizontal_margin</item>
    </style>

    <style name="fragment_money" parent="fragment_full_screen">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="money_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="money_view_not_first" parent="money_view">
        <item name="android:layout_marginLeft">@dimen/money_view_not_first_margin_left</item>
        <item name="android:layout_marginTop">@dimen/money_view_not_first_margin_top</item>
    </style>

    <style name="money_editors" parent="money_view"/>

    <style name="container_button_main_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/vertical_margin_big</item>
        <item name="android:paddingBottom">@dimen/vertical_margin_big</item>
        <item name="android:paddingLeft">@dimen/horizontal_margin_big</item>
        <item name="android:paddingRight">@dimen/horizontal_margin_big</item>
    </style>

    <style name="button_main_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/horizontal_margin</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_big</item>
        <item name="android:background">@drawable/button_main_menu</item>
    </style>

    <style name="button_main_menu_coming_soon" parent="button_main_menu">
        <item name="android:alpha">0.6</item>
    </style>

    <style name="button_square">
        <item name="android:layout_width">@dimen/button_square_size</item>
        <item name="android:layout_height">@dimen/button_square_size</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="button_square_small">
        <item name="android:layout_width">@dimen/button_square_size_small</item>
        <item name="android:layout_height">@dimen/button_square_size_small</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="imageview_coin">
        <item name="android:layout_width">@dimen/coin_size</item>
        <item name="android:layout_height">@dimen/coin_size</item>
    </style>

    <style name="default_edittext_number">
        <item name="android:background">@color/grey_light</item>
        <item name="android:inputType">number</item>
        <item name="android:paddingBottom">@dimen/edittext_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/edittext_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/edittext_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/edittext_padding_vertical</item>
    </style>

    <style name="money_edittext" parent="@style/default_edittext_number">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/grey_light</item>
        <item name="android:textColorHint">@color/transparent</item>
        <item name="android:hint">000</item>
        <item name="android:maxLength">3</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_marginLeft">@dimen/money_edittext_margin_left</item>
        <item name="android:layout_marginTop">@dimen/money_edittext_margin_top</item>
    </style>

    <style name="money_numberpicker_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/money_numberpicker_base_margin_left</item>
        <item name="android:layout_marginTop">@dimen/money_numberpicker_base_margin_top</item>
    </style>

    <style name="money_numberpicker" parent="money_numberpicker_base">
        <item name="android:scaleX">0.7</item>
        <item name="android:scaleY">0.7</item>
        <item name="android:theme">@android:style/Theme.Dialog</item>
        <item name="android:layout_marginTop">@dimen/money_numberpicker_margin_top</item>
    </style>

    <style name="money_numberslider" parent="money_numberpicker_base">
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleX">0.8</item>
        <item name="android:scaleY">0.8</item>
    </style>
</resources>

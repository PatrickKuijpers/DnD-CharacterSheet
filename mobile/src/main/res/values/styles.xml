<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="fragment_full_screen_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="fragment_full_screen" parent="fragment_full_screen_base">
        <item name="android:paddingTop">@dimen/vertical_margin</item>
        <item name="android:paddingBottom">@dimen/vertical_margin</item>
        <item name="android:paddingLeft">@dimen/horizontal_margin</item>
        <item name="android:paddingRight">@dimen/horizontal_margin</item>
    </style>

    <style name="fragment_full_screen_with_scrollview" parent="fragment_full_screen_base">
        <item name="android:paddingLeft">@dimen/horizontal_margin_small</item>
        <item name="android:paddingRight">@dimen/horizontal_margin_small</item>
    </style>

    <style name="fragment_main_menu" parent="fragment_full_screen_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="fragment_money" parent="fragment_full_screen">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="money_view_list">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="money_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center|start</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="money_view_not_first" parent="money_view">
        <item name="android:layout_marginLeft">@dimen/money_view_not_first_margin_left</item>
        <item name="android:layout_marginTop">@dimen/money_view_not_first_margin_top</item>
    </style>

    <style name="money_editor" parent="money_view"/>

    <style name="money_editor_not_first" parent="money_editor">
        <item name="android:layout_marginLeft">@dimen/money_editor_not_first_margin_left</item>
        <item name="android:layout_marginTop">@dimen/money_editor_not_first_margin_top</item>
    </style>

    <style name="container_button_main_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/vertical_margin_big</item>
        <item name="android:paddingBottom">@dimen/vertical_margin_big</item>
        <item name="android:paddingLeft">@dimen/horizontal_margin_big</item>
        <item name="android:paddingRight">@dimen/horizontal_margin_big</item>
        <item name="android:orientation">vertical</item>
        <item name="android:weightSum">5</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button_main_menu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@integer/button_main_menu_height_weight</item>
        <item name="android:layout_marginLeft">@dimen/vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/horizontal_margin</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_big</item>
        <item name="android:background">@drawable/button_main_menu</item>
    </style>

    <style name="button_main_menu_coming_soon" parent="button_main_menu">
        <item name="android:alpha">0.6</item>
    </style>

    <style name="button_square_small">
        <item name="android:layout_width">@dimen/button_square_size_small</item>
        <item name="android:layout_height">@dimen/button_square_size_small</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="button_square_medium">
        <item name="android:layout_width">@dimen/button_square_size_medium</item>
        <item name="android:layout_height">@dimen/button_square_size_medium</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="button_square_large">
        <item name="android:layout_width">@dimen/button_square_size_large</item>
        <item name="android:layout_height">@dimen/button_square_size_large</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="imageview_coin">
        <item name="android:layout_width">@dimen/coin_size</item>
        <item name="android:layout_height">@dimen/coin_size</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="base_edittext_number">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edittext_background_bottom_line</item>
        <item name="android:textColorHint">@drawable/edittext_hint_color_hide_on_focus</item>
        <item name="android:textSize">@dimen/edittext_textsize</item>
        <item name="android:inputType">number</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:paddingBottom">@dimen/edittext_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/edittext_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/edittext_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/edittext_padding_vertical</item>
    </style>

    <style name="experience_edittext" parent="@style/base_edittext_number">
        <item name="android:textColorHint">@color/transparent</item>
        <item name="android:hint">000000</item>
        <item name="android:maxLength">9</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="ability_number_editor_edittext" parent="@style/base_edittext_number">
        <item name="android:background">@color/transparent</item>
        <item name="android:hint">00</item>
        <item name="android:maxLength">2</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/ability_value_textsize</item>
    </style>

    <style name="save_ability_image_button">
        <item name="android:layout_width">@dimen/money_change_image_size</item>
        <item name="android:layout_height">@dimen/money_change_image_size</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/ic_action_save</item>
        <item name="android:contentDescription">@string/image_description_ability_save</item>
    </style>

    <style name="money_indicator_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLength">2</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/textsize_very_big</item>
    </style>

    <style name="money_edittext" parent="@style/base_edittext_number">
        <item name="android:hint">00</item>
        <item name="android:maxLength">9</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="base_numberpicker">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleX">@integer/base_numberpicker_scale</item>
        <item name="android:scaleY">@integer/base_numberpicker_scale</item>
    </style>

    <style name="base_numberslider" parent="base_numberpicker">
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>

    <style name="experience_numberslider" parent="base_numberslider">
        <item name="android:layout_height">@dimen/experience_picker_height</item>
    </style>

    <style name="base_money_numberpicker" parent="base_numberpicker">
        <item name="android:layout_height">@dimen/money_numberpicker_height</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="money_numberslider" parent="base_money_numberpicker">
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>

    <style name="money_numberpicker" parent="base_money_numberpicker">
        <item name="android:theme">@style/customize_numberpicker</item>
    </style>

    <style name="customize_numberpicker" parent="@android:style/Theme.Dialog">
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="change_money_image_button">
        <item name="android:layout_width">@dimen/money_change_image_size</item>
        <item name="android:layout_height">@dimen/money_change_image_size</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
</resources>
